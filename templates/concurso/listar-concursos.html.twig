<!DOCTYPE html>
<html>
<head>
    <title>Sorte Digital</title>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="Sorte Digital">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/flaty.css') }}">
    <link rel="stylesheet" href="{{ asset('css/flaty-responsive.css') }}">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <meta property="og:description" content="SORTE DIGITAL">
    <meta property="og:title" content="Acompanhamento de Grupos - SORTE DIGITAL">
    <meta property="og:url" content="https://www.megapalmeira.com.br/">
    <meta property="og:image" content="/img/letsDive.png">
    <meta property="og:image:secure_url" content="/img/letsDive.png">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Sorte Digital">
</head>
<body class="login-page">
<div class="login-wrapper" style="margin-top:-70px;">

    <div class="logo" style="margin:auto; text-align:center;">
        <img src="img/banner.png">
    </div>
    <br/>

    <div class="row" style="width: 100%;margin-left: 1%;margin-bottom: 1%">
        <div class="">
            <div class="box">
                <div class="box-title">
                    <h3>Concursos Abertos:</h3>
                </div>
                <div class="box-content2">
                    <div class="box-content">
                        <div class="table-responsive" style="border:0">
                            <table class="table table-advance" id="table2">
                                <thead>
                                <tr>
                                    <th>Entrar</th>
                                    <th>Valor da Cota</th>
                                    <th>Data Que Iniciará</th>
                                    <th>Premiação prevista</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for concurso in concursosAbertos %}
                                    <tr class="table-flag-blue">
                                        <td>
                                            <a href="/concursos/{{ concurso.id }}"title="Acompanhe o Grupo">
                                                <button type="button" class="btn btn-info btn-lg">Abrir: <i class="far fa-hand-point-right"></i></button> 
                                            </a>
                                         </td>
                                        <td>R$ {{ concurso.valorCota }},00</td>
                                        <td>{{ concurso.dataAbertura }}</td>
                                        <td>R$ {{ concurso.premiacaoMaisPontos }},00</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="box">
                <div class="box-title">
                    <h3>Concursos Em Andamento:</h3>
                </div>
                <div class="box-content2">
                    <div class="box-content">
                        <div class="table-responsive" style="border:0">
                            <table class="table table-advance" id="table2">
                                <thead>
                                <tr>
                                    <th>Entrar</th>
                                    <th>Valor da Cota</th>
                                    <th>QTD Apostas feitas</th>
                                    <th>Premiação prevista</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for concurso in concursosEmAndamento %}
                                    <tr class="table-flag-blue">
                                        <td>
                                            <a href="/concursos/{{ concurso.id }}"title="Acompanhe o Grupo">
                                                <button type="button" class="btn btn-info btn-lg">Abrir: <i class="far fa-hand-point-right"></i></button> 
                                            </a>
                                         </td>
                                        <td>R$ {{ concurso.valorCota }},00</td>
                                        <td>{{ concurso.cartelas.count }}</td>
                                        <td>R$ {{ concurso.premiacaoMaisPontos }},00</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="box">
                <div class="box-title">
                    <h3>Concursos Finalizados:</h3>
                </div>
                <div class="box-content2">
                    <div class="box-content">
                        <div class="table-responsive" style="border:0">
                            <table class="table table-advance" id="table2">
                                <thead>
                                <tr>
                                    <th>Resultado Final</th>
                                    <th>Premiação Paga</th>
                                    <th>Vencedores</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for concurso in concursosFechados %}
                                    <tr class="table-flag-blue">
                                        <td>
                                            <a href="/concursos/{{ concurso.id }}"title="Acompanhe o Grupo">
                                                <button type="button" class="btn btn-info btn-lg">Ver Resultado: <i class="far fa-hand-point-right"></i></button> 
                                            </a>
                                         </td>
                                        <td>R$ {{ concurso.premiacaoMaisPontos }},00</td>
                                        <td>
                                        {% for vencedor in concurso.vencedores %}
                                            {% if is_granted('ROLE_ADMIN') %}
                                                 {{ vencedor }}<br>
                                            {% else %}
                                                ({{ vencedor[:-4] }}-XXXX)<br>
                                            {% endif %}
                                        {% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- END Main Content -->
</body>
</html>



